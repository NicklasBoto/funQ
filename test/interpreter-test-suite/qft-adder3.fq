cAdd3 : QBit -o (QBit >< QBit >< QBit) -o !(Bit >< Bit >< Bit) -o (QBit >< QBit >< QBit)
cAdd3 c  inA inB = let (a0, a1, a2) = swap3 (QFT3 inA) in   
                let (b2, b1, b0) = inB in    
                let (c1,a01) = if b2  then CR1 (c,a0) else (c,a0) in
                let (c2,a02) = if b1  then CR2 (c1,a01) else (c1,a01) in
                let (c3,a03) = if b0  then CR4 (c2,a02) else (c2,a02) in
                let (c4,a11) = if b1  then CR1 (c3,a1) else (c3,a1) in
                let (c5,a12) = if b0  then CR2 (c4,a11) else (c4,a11) in
                let (c6,a21) = if b0  then CR1 (c5,a2)  else (c5,a2) in
                QFTI3 (swap3 (a03,a12,a21))
