main : Bit >< Bit >< Bit
main = meas3 (cAdd3 carry exIntA exIntBB)

carry : QBit
carry = new 1

exIntA : QBit >< QBit >< QBit
exIntA = (new 0, new 0, new 1)
         
exIntB : QBit >< QBit >< QBit
exIntB = (new 0, new 0, new 1)

exIntBB : !(Bit >< Bit >< Bit)
exIntBB = (1,0,1)

exIntN : QBit >< QBit >< QBit
exIntN = (new 1, new 1, new 0)

